/dts-v1/;
#include "socfpga_cyclone5_de10_nano.dtsi"
#include <dt-bindings/interrupt-controller/irq.h>
#include <dt-bindings/gpio/gpio.h>

/ {


	clocks {
		ad7779_mclk: clock@0 {
		#clock-cells = <0>;
		compatible = "fixed-clock";
		clock-frequency = <2048000>;
		};
	};

	vref: regulator-vref {
		compatible = "regulator-fixed";
		regulator-name = "fixed-supply";
		regulator-min-microvolt = <3600000>;
		regulator-max-microvolt = <3600000>;
		regulator-always-on;
	};

};

&fpga_axi {
	rx_dma: rx-dmac@0x00030000 {
		compatible = "adi,axi-dmac-1.00.a";
		reg = <0x00030000 0x00000800>;
		#dma-cells = <1>;
		interrupt-parent = <&intc>;
		interrupts = <0 45 IRQ_TYPE_LEVEL_HIGH>;
		clocks = <&h2f_user0_clk>;

		adi,channels {
			#size-cells = <0>;
			#address-cells = <1>;

			dma-channel@0 {
				reg = <0>;
				adi,source-bus-width = <256>;
				adi,source-bus-type = <2>;
				adi,destination-bus-width = <64>;
				adi,destination-bus-type = <0>;
			};
		};
	};

	spi@0x00108000 {
		compatible = "altr,spi-18.1", "altr,spi-1.0";
		reg = <0x00108000 0x00000020>;  
		interrupt-parent = <&intc>;
		interrupts = <0 41 IRQ_TYPE_LEVEL_HIGH>;

		#address-cells = <0x1>;
		#size-cells = <0x0>;

		ad7779: adc@0 {
			compatible = "adi,ad7779";
			reg = <0>;
			spi-max-frequency = <1000000>;
			vref-supply = <&vref>;
			startn-gpios = <&gpio_out 1 GPIO_ACTIVE_LOW>;
		    	resetn-gpios = <&gpio_out 7 GPIO_ACTIVE_LOW>;
			
			clocks = <&ad7779_mclk>;
			clock-names = "mclk";
		};
	};

	axi_adc_ad7779: cf_axi_ad7779@0x00020000 {
		compatible = "adi,axi-adc-10.0.a";
		reg = <0x00020000 0x10000>;
		dmas = <&rx_dma 0>;
		dma-names = "rx";
		spibus-connected = <&ad7779>;
	};
};